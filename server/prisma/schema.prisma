datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  email     String    @unique
  password  String
  posts     Post[]
  comments  Comment[]
  votes     Vote[]
}

model Post {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  title     String
  text      String?
  authorId  Int
  author    User      @relation(fields: [authorId], references: [id])
  comments  Comment[]
  votes     Vote[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  text      String
  authorId  Int
  postId    Int
  replyToId Int?
  author    User      @relation(fields: [authorId], references: [id])
  post      Post      @relation(fields: [postId], references: [id])
  replyTo   Comment?  @relation("CommentToComment", fields: [replyToId], references: [id])
  replies   Comment[] @relation("CommentToComment")
}

enum Direction {
  UP
  DOWN
}

model Vote {
  authorId  Int
  postId    Int
  direction Direction
  author    User      @relation(fields: [authorId], references: [id])
  post      Post      @relation(fields: [postId], references: [id])

  @@id([authorId, postId])
}
